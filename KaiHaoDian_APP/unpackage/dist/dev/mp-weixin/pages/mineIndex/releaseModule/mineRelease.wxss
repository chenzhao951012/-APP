/* 公共样式 */
.all_content{
	margin:0 30rpx;
	font-size:28rpx;
	color:#101010;
	padding-top:40rpx;
}
._display_flex{
	display:-webkit-box;
	display:-webkit-flex;
	display:-ms-flexbox;
	display:flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
/* 项目类型 */
._project_type{
	height:34rpx;
	text-align:center;
}
._project_type_text{
	display:inline-block;
}
._project_type_icon{
	display:inline-block;
	width:28rpx;
	heihgt:28rpx;
	line-heihgt:28rpx;
	text-align:center;
}
/* 排序方式 */
._project_type:nth-of-type(2){
	text-align:left;
	margin-top:20rpx;
	font-size:24rpx;
	margin-bottom:66rpx;
	position:relative;
}
._drop_down_menu{
	width:156rpx;
	height:144rpx;
	background:#f2f2f2;
	font-size:28rpx;
	padding-top:26rpx;
	display:none;
}
._drop_down_menu_text{
	margin:0 28rpx 30rpx 16rpx;
}
/* 所有发布 */
._all_release{
	margin-bottom:32rpx;
}
/* 问题 */
._release_question{
	font-size:32rpx;
	line-height:44rpx;
	margin-bottom:18rpx;
}
/* 回答 */
._release_advice{
	height:82rpx;
	line-height:36rpx;
	font-size:26rpx;
	margin-bottom:28rpx;
	text-align:left;
}
/* 发布时间及关注点赞 */
._bottom_information{
	font-size:28rpx;
}
.right_Review_praise{
	color:#101010;
	font-size:28rpx;
}
.left_specific_time{
	width:152rpx;
	height:40rpx;
	font-size:28rpx;
	line-height:40rpx;
}
._left_comments{
	width:18rpx;
	height:40rpx;
}
._right_give_like{
	color:#101010;
	font-size:28rpx;
}
._comments_icon{
	width:48rpx;
	height:48rpx;
	font-size:40rpx;
	text-align:center;
	margin-right:72rpx;
}
._right_give_like ._comments_icon{
	margin-right:0;
}
/* 项目类型遮罩 */
._release_mask1{
	width:750rpx;
	height:100%;
	position:fixed;
	top:88rpx;
	left:0;
	background:rgba(0,0,0,0.2);
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display:none;
}
._mask_top{
	height:34rpx;
	text-align:center;
	margin: 30rpx 0 68rpx;
}
._mask_left{
	display:inline-block;
}
._mask_right{
	display:inline-block;
	width:28rpx;
	heihgt:28rpx;
	line-heihgt:28rpx;
	text-align:center;
}
._mask_text{
	overflow: hidden;
	background:#FFFFFF;
}
._release_mask1_type{
	height:352rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	/* margin-top:100upx; */
	padding:0 48rpx 0;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
}
._release_mask1_type_text{
	width:164rpx;
	height:76rpx;
	border:2rpx solid #BBBBBB;
	border-radius: 20rpx;
	text-align:center;
	line-height:76rpx;
	margin-right:70rpx;
}
._release_mask1_type_text:nth-of-type(3n){
	margin-right:0;
}
