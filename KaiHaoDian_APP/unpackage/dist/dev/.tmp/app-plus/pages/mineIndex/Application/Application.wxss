.content {
  width: 750rpx;
}
.enterBox {
  background-color: #f3f3f3;
  padding-top: 20rpx;
  block-size: border-box;
}
.enterBox .apply {
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
}
.enterBox .apply .tab {
      border-radius: 0 0 0rpx 0rpx;
      -webkit-box-shadow: 0 2px 0 #f0f0f1, 0 0px 0 #f0f0f1;
              box-shadow: 0 2px 0 #f0f0f1, 0 0px 0 #f0f0f1;
}
.enterBox .apply .flow {
      padding: 30rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      margin-top: 60rpx;
      font-size: 24rpx;
      color: #333333;
}
.enterBox .apply .flow .flowBox {
        padding: 0 30rpx;
        -webkit-box-sizing: border-box;
                box-sizing: border-box;
        border: 2rpx solid #ffbd38;
        line-height: 4;
        border-radius: 10rpx;
}
.enterBox .apply .flow .flowBox .iconfont {
          color: #ffbd38;
          font-size: 40rpx;
          vertical-align: middle;
          padding-right: 20rpx;
          font-weight: 100;
}
.enterBox .apply .flow .flowBox2 {
        line-height: 0;
        padding: 20rpx 30rpx;
        -webkit-box-sizing: border-box;
                box-sizing: border-box;
}
.enterBox .apply .flow .flowBox2 .contentOne {
          line-height: 2.5;
          margin-bottom: 60rpx;
}
.enterBox .apply .flow .flowBox2 .contenTwo .remark {
          font-weight: 600;
          font-size: 28rpx;
          color: #ffbe36;
          margin-bottom: 40rpx;
}
.enterBox .apply .flow .flowBox2 .contenTwo .subconnent {
          line-height: 2.5;
          font-size: 24rpx;
          margin-bottom: 10rpx;
}
.submitBox {
  width: 750rpx;
  background-color: #ffbd38;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
