.status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.top_view {
  height: var(--status-bar-height);
  width: 100%;
  position: fixed;
  top: 0;
}
.content {
  width: 750rpx;
}
.shippingaddress {
  background-color: #f3f3f3;
  padding-top: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.shippingaddress .address {
    padding: 0 30rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    border-radius: 20rpx 20rpx 0 0;
    background-color: #fff;
}
.shippingaddress .address .profile {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      border-bottom: 2rpx solid #eeeeee;
      height: 100rpx;
      line-height: 100rpx;
      font-size: 28rpx;
      font-weight: 600;
      color: #333333;
}
.shippingaddress .address .profile ._input {
        margin-top: 24rpx;
        margin-left: 20rpx;
        font-weight: 100;
        color: #666666;
}
.shippingaddress .address .profile .iconfont {
        font-size: 32rpx;
        font-weight: 100;
}
.shippingaddress .address .profile text {
        padding-left: 20rpx;
}
.checkbox {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-right: 40rpx;
  color: #666666;
  font-size: 28rpx;
  font-weight: 100;
}
.checkbox uni-radio .uni-radio-input {
    border: 2rpx solid #ffbb39 !important;
}
