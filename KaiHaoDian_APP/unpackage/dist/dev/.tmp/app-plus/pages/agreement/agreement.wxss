.status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.top_view {
  height: var(--status-bar-height);
  width: 100%;
  position: fixed;
  top: 0;
}
.content {
  width: 750rpx;
}
.agreement {
  width: 750rpx;
  background-color: #f3f3f3;
  padding-top: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.agreement .agreementBox {
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
    padding: 30rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.agreement .agreementBox .explain {
      font-size: 24rpx;
      color: #333333;
      text-indent: 60rpx;
      letter-spacing: 2rpx;
      line-height: 1.5;
}
.agreement .agreementBox .explain .date text {
        padding-left: 10rpx;
        padding-right: 10rpx;
        color: #ffcf6d;
}
.agreement .agreementBox .explain .date .year {
        padding-left: 30rpx;
        padding-right: 10rpx;
}
.agreement .agreementBox .explain view text {
        padding-left: 30rpx;
        padding-right: 10rpx;
}
.agreement .checkbox {
    padding: 30rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background-color: #fff;
    font-size: 24rpx;
    padding-bottom: 160rpx;
}
.agreement .checkbox text {
      color: #ffd37a;
}
.agreement .checkbox .iconfont {
      color: #ffcf6d;
      font-size: 40rpx;
      vertical-align: middle;
      padding-right: 10rpx;
}
.title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  margin-top: 40rpx;
  text-indent: 60rpx;
  margin-bottom: 10rpx;
}
.nextstep {
  height: 90rpx;
